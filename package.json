{
	"name": "serverless_chat",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"test": "jest --passWithNoTests --maxWorkers=1; playwright test",
		"lint": "eslint . --ext .ts,.tsx",
		"prepare": "husky install",
		"start-worker": "wrangler dev",
		"deploy-worker": "wrangler publish",
		"worker": "miniflare --watch --debug --no-cf-fetch --https --modules src/worker.js"
	},
	"dependencies": {
		"react": "18.2.0",
			"react-dom": "18.2.0",

		"framer-motion": "7.5.1"
	},
	"devDependencies": {
		"wrangler": "2.1.10",
		"miniflare": "2.9.0",
		"@cloudflare/workers-types": "3.16.0",

		"npm-check-updates": "16.3.7",

		"@types/react": "18.0.21",
		"@types/react-dom": "18.0.6",

		"sass": "1.55.0",

		"typescript": "4.8.4",
		"ts-node": "10.9.1",

		"vite": "3.1.4",
		"vite-tsconfig-paths": "3.5.1",
		"identity-obj-proxy": "^3.0.0",
		  "@vitejs/plugin-react": "2.1.0",

		"prettier": "2.7.1",

		"eslint": "8.24.0",
			"eslint-config-airbnb": "19.0.4",
			"eslint-config-prettier": "8.5.0",
			"eslint-config-standard-with-typescript": "23.0.0",

			"eslint-plugin-import": "2.26.0",
			"eslint-plugin-n": "15.3.0",
			"eslint-plugin-prettier": "4.2.1",
			"eslint-plugin-promise": "6.0.1",
			"eslint-plugin-react": "7.31.8",

			"@typescript-eslint/eslint-plugin": "5.39.0",
			"@typescript-eslint/parser": "5.39.0",

		"husky": "8.0.1",

		"jest": "29.1.2",
		"jest-environment-jsdom": "29.1.2",
		"@types/jest": "29.1.1",
		"@testing-library/jest-dom": "^5.16.5",

		"ts-jest": "29.0.3",

		"babel-loader": "8.2.5",
		"@babel/core": "7.19.3",
		"@babel/preset-env": "^7.19.3",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.18.6",

		"vitest": "0.23.4",

		"playwright": "1.26.1",
		"@playwright/test": "^1.26.1",

		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3"
	}
}
